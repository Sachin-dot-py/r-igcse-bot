{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"lineEnding": "crlf",
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 80
	},
	"linter": {
		"ignore": ["src/components/InteractionPagination.js"],
		"enabled": true,
		"rules": {
			"complexity": {
				"recommended": true
			},
			"correctness": {
				"recommended": true
			},
			"performance": {
				"all": true,
				"noBarrelFile": "off"
			},
			"security": {
				"all": true
			},
			"suspicious": {
				"recommended": true
			},
			"style": {
				"recommended": true
			}
		}
	}
}
